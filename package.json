{
    "name": "merge-n-paste",
    "displayName": "merge-n-paste",
    "description": "Compare(editor <=> clipboard) and paste using the external diff-merge tool",
    "version": "1.0.1",
    "publisher": "RAWSEQ",
    "icon": "image/mnp.png",
    "license": "SEE LICENSE IN README.md",
    "engines": {
        "vscode": "^1.18.0"
    },
    "keywords": [
        "merge",
        "paste",
        "compare",
        "diff",
        "utility"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.mergeNPaste"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.mergeNPaste",
                "title": "Merge and Paste"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Merge and Paste",
            "properties": {
                "merge-n-paste.pathToMergeTool": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": "",
                    "description": "The path to Merge tool. \nreplace: %E = EditorFile, %C = ClipboardFile, %M = MergedOutput \nex: \"\\\"C:\\\\Program Files\\\\KDiff3\\\\KDiff3.exe\\\" %E %C -o %M\" "
                },
                "merge-n-paste.reflectFile": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": "%M",
                    "description": "Reflect source File to editor. \nreplace: %E = EditorFile, %C = ClipboardFile, %M = MergedOutput \nex: \"Reflect clipboard text\" = %C"
                }
            }
        },
        "menus": {
            "editor/context": [{
                "command": "extension.mergeNPaste",
                "group": "9_cutcopypaste@500"
            }]
        },
        "keybindings": [{
            "command": "extension.mergeNPaste",
            "key": "ctrl+alt+v"
        }]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "copy-paste": "^1.3.0"
    }
}
