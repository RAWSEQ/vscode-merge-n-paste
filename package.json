{
    "name": "merge-n-paste",
    "displayName": "merge-n-paste",
    "description": "Compare(editor <=> clipboard) and paste using the external diff-merge tool",
    "version": "1.0.5",
    "publisher": "RAWSEQ",
    "icon": "image/mnp.png",
    "license": "SEE LICENSE IN README.md",
    "engines": {
        "vscode": "^1.18.0"
    },
    "keywords": [
        "merge",
        "paste",
        "compare",
        "diff",
        "utility"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.mergeNPaste"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.mergeNPaste",
                "title": "Merge and Paste"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Merge and Paste",
            "properties": {
                "merge-n-paste.pathToMergeTool": {
                    "type": "string",
                    "default": "",
                    "description": "The path to Merge tool. \nreplace: %E = EditorFile, %C = ClipboardFile, %M = MergedOutput \nex(WinMerge): \"C:\\Program Files (x86)\\WinMerge\\WinMergeU.exe\" %E %C \nex(KDIFF): \"C:\\Program Files\\KDiff3\\KDiff3.exe\" %E %C -o %M \nex(TortoiseGitMerge): \"C:\\Program Files\\TortoiseGit\\bin\\TortoiseGitMerge.exe\" %E %C "
                },
                "merge-n-paste.reflectFile": {
                    "type": "string",
                    "default": "%M",
                    "description": "Reflect source File to editor. \nreplace: %E = EditorFile, %C = ClipboardFile, %M = MergedOutput \nex: \"Reflect clipboard text\" = %C"
                }
            }
        },
        "menus": {
            "editor/context": [
                {
                    "command": "extension.mergeNPaste",
                    "group": "9_cutcopypaste@500"
                }
            ]
        },
        "keybindings": [
            {
                "command": "extension.mergeNPaste",
                "key": "ctrl+alt+v"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.5",
        "@types/node": "^10.12.10",
        "typescript": "^3.1.6",
        "vscode": "^1.1.22"
    },
    "dependencies": {
        "copy-paste": "^1.3.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/RAWSEQ/vscode-merge-n-paste.git"
    }
}
